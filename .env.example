# NE-Attend Environment Configuration
# Copy this file to .env and update the values for your environment

# =============================================================================
# FRONTEND CONFIGURATION (Vite)
# =============================================================================

# Backend API URL - used by Vite proxy in development
# In production, set VITE_API_BASE_URL instead
VITE_BACKEND_URL=http://localhost:8000

# API Base URL for production frontend
# This is used when the frontend is built for production
VITE_API_BASE_URL=http://localhost:8000/api

# =============================================================================
# BACKEND CONFIGURATION (Node.js/Express)
# =============================================================================

# Server port for the backend API
PORT=8000

# MongoDB connection strings
# Cloud MongoDB (primary in production)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/neattend?retryWrites=true&w=majority

# Local MongoDB (fallback/development)
LOCAL_MONGODB_URI=mongodb://localhost:27017/neattend

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================

# SMTP settings for email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# From email address
EMAIL_FROM=NE-Attend <noreply@neattend.app>

# =============================================================================
# GOOGLE OAUTH (Optional)
# =============================================================================

GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# =============================================================================
# BROWSER EXTENSION CONFIGURATION
# =============================================================================

# Note: Browser extension configuration is stored in chrome.storage.sync
# and can be configured via the extension's options page.
# 
# Default values:
# - Frontend URL: http://localhost:5173
# - Backend URL: http://localhost:8000
#
# For production, users should update these values via the extension options page
# or the extension can be pre-configured before distribution.

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable debug logging (true/false)
DEBUG=false

# Node environment (development/production/test)
NODE_ENV=development
